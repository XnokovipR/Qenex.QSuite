<UserControl x:Class="Qenex.QSuite.Views.WorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Qenex.QSuite.Views"
             xmlns:viewModels="clr-namespace:Qenex.QSuite.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance viewModels:WorkspaceViewModel, IsDesignTimeCreatable=False}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="GridLineStyle" TargetType="Path">
                <Setter Property="Stroke" Value="#ff101010"/>
                <Setter Property="StrokeDashArray" Value="3"/>
            </Style>
            <x:Array x:Key="GridLineStyles" Type="Style">
                <StaticResource ResourceKey="GridLineStyle"/>
            </x:Array>
        </ResourceDictionary>
    </UserControl.Resources>

    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnWindowLoadedCommand}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <!--<syncfusion:SfDiagram x:Name="DiagramControl"
