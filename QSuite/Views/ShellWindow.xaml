<syncfusion:ChromelessWindow x:Class="Qenex.QSuite.Views.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Qenex.QSuite.Views"
    xmlns:qenexSyncfusion="clr-namespace:Qenex.QSuite.SyncfusionOverridden"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:vm="clr-namespace:Qenex.QSuite.ViewModels"
    Icon="../../Icons/QSuite48.png"
    mc:Ignorable="d"
    Title="QSuite" 
    d:DataContext="{d:DesignInstance vm:ShellViewModel, IsDesignTimeCreatable=False}"
    UseNativeChrome="True">
    
    <syncfusion:ChromelessWindow.DataContext>
        <vm:ShellViewModel/>
    </syncfusion:ChromelessWindow.DataContext>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnLoadedCommand}" CommandParameter="{Binding ElementName=DockingManager}"/>
        </i:EventTrigger>
    
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding OnClosingCommand}" CommandParameter="{Binding ElementName=DockingManager}"/>
        </i:EventTrigger>
        
        <i:EventTrigger EventName="SizeChanged">
            <i:InvokeCommandAction Command="{Binding OnWinSizeChangedCommand}"/>
        </i:EventTrigger>
        
        <i:EventTrigger EventName="LocationChanged">
            <i:InvokeCommandAction Command="{Binding OnWinLocationChangedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <syncfusion:Ribbon x:Name="RibbonMenu" Grid.Row="0" RibbonState="Normal">
            <syncfusion:Ribbon.BackStageButton>
                <syncfusion:BackStageButton Visibility="Collapsed"/>
            </syncfusion:Ribbon.BackStageButton>
            
            <!-- Ribbon Menu - Home -->
            <syncfusion:RibbonTab Caption="Home">
                <syncfusion:RibbonBar Header="Project">
                    <syncfusion:RibbonButton 
                        SizeForm="Large" 
                        Label="Open" 
                        LargeIcon="../Icons/Menu/OpenProject.png"
                        Command="{Binding OnOpenProjectCommand}" CommandParameter="{Binding ElementName=DockingManager}"
                    />
                    <syncfusion:RibbonButton 
                        SizeForm="Large" 
                        Label="Close" 
                        LargeIcon="../Icons/Menu/CloseProject.png"
                        Command="{Binding OnCloseProjectCommand}" CommandParameter="{Binding ElementName=DockingManager}"
                    />
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Header="Wotrkspace">
                    <syncfusion:RibbonButton 
                        SizeForm="Large" 
                        Label="Add" 
                        LargeIcon="../Icons/Menu/AddWorkspace.png"
                        Command="{Binding OnAddWorkspaceCommand}" CommandParameter="{Binding ElementName=DockingManager}"
                    />
                    <syncfusion:RibbonButton 
                        SizeForm="Large" 
                        Label="Remove" 
                        LargeIcon="../Icons/Menu/RemoveWorkspace.png"
                        Command="{Binding OnRemoveWorkspaceCommand}" CommandParameter="{Binding ElementName=DockingManager}"
                    />
                </syncfusion:RibbonBar>
            </syncfusion:RibbonTab>
            
            <!-- Ribbon Menu - Runtime -->
            <syncfusion:RibbonTab Caption="Runtime">
                <syncfusion:RibbonBar Header="Run">
                    <syncfusion:RibbonButton 
                        SizeForm="Large" 
                        Label="Connect" 
                        LargeIcon="../Icons/Menu/Connect.png"
                    />
                    <!-- Command="{Binding OnConnectCommad}" CommandParameter="{Binding ElementName=DockingManager}" -->
                    <syncfusion:RibbonButton 
                        SizeForm="Large" 
                        Label="Disconnect" 
                        LargeIcon="../Icons/Menu/Disconnect.png"
                    />
                    <!-- Command="{Binding OnDisconnectCommand}" CommandParameter="{Binding ElementName=DockingManager}" -->
                </syncfusion:RibbonBar>
            </syncfusion:RibbonTab>
        </syncfusion:Ribbon>
        
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <syncfusion:DockingManager
                x:Name="DockingManager" 
                PersistState="False"
                ItemsSource="{Binding DockingManager.DockableViewModels}"/>
        </Grid>
        <StatusBar Grid.Row="2"></StatusBar>

    </Grid>
</syncfusion:ChromelessWindow>
